@page "/catalog/flexmoneyline"
@inject Microsoft.Extensions.Localization.IStringLocalizer<FlexMoneyLine> _localizer
<style>
.mud-table-container {
    overflow: auto;
}
</style>
<HeroTitle Title="@_localizer["Money Line"]" Description="@_localizer["Manage Money Line."]" />

<MudTable Items="@_flexMoneyLineslist" Hover="true" Breakpoint="Breakpoint.Sm"  LoadingProgressColor="Color.Info">
    <ToolBarContent>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="(() => InvokeModal())" Style="margin-right: 5px;">@_localizer["Create"]</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Refresh" Style="margin-right: 5px;">@_localizer["Reload"]</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary"Style="margin-right: 5px;">@_localizer["Export"]</MudButton>
    </ToolBarContent>
@*        <MudTextField @bind-Value="_searchString" Immediate="true" Placeholder="@_localizer["Search for Flex Money type"]" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mb-3"></MudTextField>
*@
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Note</MudTh>
        <MudTh Style="text-align: right">Action</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel=" Note">@context.Note</MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right">
            <MudMenu Label="@_localizer["Actions"]" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
                <MudMenuItem>@_localizer["Edit"]</MudMenuItem>
                <MudMenuItem>@_localizer["Delete"]</MudMenuItem>
            </MudMenu>
        </MudTd>
    </RowTemplate>
</MudTable>